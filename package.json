{
  "name": "c8y-angular-polymer-boilerplate",
  "description": "Cumulocity + Angular + Polymer (Web Components) boilerplate UI fiddle",
  "version": "0.0.0",
  "author": "Glenn DWiyatcita <glenn@nonpartisan.com> (https://tiny.cc/dwiyatci)",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.10",
    "@angular/common": "^6.1.10",
    "@angular/compiler": "^6.1.10",
    "@angular/core": "^6.1.10",
    "@angular/forms": "^6.1.10",
    "@angular/http": "^6.1.10",
    "@angular/platform-browser": "^6.1.10",
    "@angular/platform-browser-dynamic": "^6.1.10",
    "@angular/router": "^6.1.10",
    "@c8y/ngx-components": "9.16.1",
    "@c8y/style": "9.16.1",
    "@codebakery/origami": "3.0.2",
    "@polymer/paper-checkbox": "3.1.0",
    "@polymer/paper-input": "3.0.1",
    "@webcomponents/webcomponentsjs": "2.1.3",
    "bootstrap": "4.1.3",
    "core-js": "^2.5.4",
    "font-awesome": "4.7.0",
    "lodash": "4.17.11",
    "paper-loginscreen": "2.0.2",
    "rxjs": "^6.3.3",
    "rxjs-compat": "6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.5",
    "@angular/cli": "~6.2.5",
    "@angular/compiler-cli": "^6.1.10",
    "@angular/language-service": "^6.1.10",
    "@types/jasmine": "~2.8.9",
    "@types/jasminewd2": "~2.0.5",
    "@types/node": "~10.11.7",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~3.2.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "23.6.0",
    "jest-preset-angular": "6.0.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.4",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^1.3.1",
    "protractor": "~5.4.1",
    "ts-node": "~7.0.1",
    "tslint": "~5.11.0",
    "typescript": "~2.7.2"
  },
  "scripts": {
    "prepare:es5": "origami prepare es5 node_modules/{@polymer/*,@vaadin/*,@webcomponents/shadycss}",
    "prepare:es2015": "origami prepare es2015 node_modules/{@polymer/*,@vaadin/*,@webcomponents/shadycss}",
    "ng": "ng",
    "start": "export NODE_TLS_REJECT_UNAUTHORIZED='0' && yarn prepare:es5 && ng serve",
    "start:es2015": "export NODE_TLS_REJECT_UNAUTHORIZED='0' && yarn prepare:es2015 && ng serve c8y-angular-polymer-boilerplate",
    "start:prod": "export NODE_TLS_REJECT_UNAUTHORIZED=0 && ng serve --prod --aot=false --port=4300 --sourcemaps=true --live-reload false",
    "build": "yarn prepare:es5 && ng build",
    "build:es2015": "yarn prepare:es2015 && ng build",
    "xtest": "ng test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|angular2-ui-switch|ng-dynamic)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/__mocks__/image.js",
      "@lib/(.*)": "<rootDir>/src/lib/$1"
    }
  }
}
